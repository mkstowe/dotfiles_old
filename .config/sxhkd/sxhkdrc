# Launch programs
super + Return
	kitty

super + slash
	rofi -theme-str '@import "~/.config/rofi/app-menu.rasi"' -show run

super + ctrl + f
	firefox

super + ctrl + d
	discord

super + ctrl + s
	spotify

super + ctrl + v
	code-insiders

super + ctrl + l
	slack

super + ctrl + g
	gimp


# Audio
XF86AudioMute
	pactl set-sink-mute 0 toggle

{XF86AudioLowerVolume,XF86AudioRaiseVolume}
	pactl set-sink-mute 0 false ; pactl set-sink-volume 0 {-,+}5%


# Power
super + BackSpace
	~/.config/rofi/scripts/powermenu.sh


# Reload sxhkd
super + shift + Tab
	pkill -USR1 -x sxhkd; notify-send 'sxhkd' 'Reloaded config'



# Screenshot region
super + shift + alt + p
	~/.config/rofi/scripts/screenshot.sh


#################
#		#
#     BSPWM     #
#		#
#################

# Restart 
super + shift + slash
	pkill panel; ~/.config/bspwm/bspwmrc



# Close focused window
super + ctrl + q
	bspc node -c

# Cancel all preselections
super + shift + alt + q
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# Send window to given direction
super + {_,shift +,shift + alt + }{Left,Down,Up,Right}
	bspc node -{f,s,p} {west,south,north,east}

# Focus or send to given desktop
super + {_,shift + }{a,s,d,q,w,e,r,t,y,u,i,o,p}
	bspc {desktop -f,node -d} '^{1-9,10,1-3}'

# Cycle desktops
super + ctrl + {Left,Right}
	bspc desktop -f {prev,next}.local

# Resize windows
super + alt + {h,j,k,l}
    STEP=40; SELECTION={1,2,3,4}; \
    bspc node -z $(echo "left -$STEP 0,bottom 0 $STEP,top 0 -$STEP,right $STEP 0" | cut -d',' -f$SELECTION) || \
    bspc node -z $(echo "right -$STEP 0,top 0 $STEP,bottom 0 -$STEP,left $STEP 0" | cut -d',' -f$SELECTION)

super + alt + {Left,Down,Up,Right}
    STEP=40; SELECTION={1,2,3,4}; \
    bspc node -z $(echo "left -$STEP 0,bottom 0 $STEP,top 0 -$STEP,right $STEP 0" | cut -d',' -f$SELECTION) || \
    bspc node -z $(echo "right -$STEP 0,top 0 $STEP,bottom 0 -$STEP,left $STEP 0" | cut -d',' -f$SELECTION)

# Rotate windows
super + {bracketleft,bracketright}
	bspc node @/ -C {backward,forward}

# Toggle fullscreen
super + shift + z
	bspc node -t \~fullscreen

# Toggle float 
super + shift + f
	bspc node -t \~floating
